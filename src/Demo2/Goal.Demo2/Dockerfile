#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

COPY ["nuget.config", "/"]
COPY ["src/Demo2/Goal.Demo2/Goal.Demo2.csproj", "Goal.Demo2/"]
COPY ["src/Demo2/Goal.Demo2.Infra.Data/Goal.Demo2.Infra.Data.csproj", "Goal.Demo2.Infra.Data/"]
COPY ["src/Demo2/Goal.Demo2.Infra.Data.Query/Goal.Demo2.Infra.Data.Query.csproj", "Goal.Demo2.Infra.Data.Query/"]
COPY ["src/Demo2/Goal.Demo2.Domain/Goal.Demo2.Domain.csproj", "Goal.Demo2.Domain/"]
COPY ["src/Demo2/Goal.Demo2.Model/Goal.Demo2.Model.csproj", "Goal.Demo2.Model/"]
COPY ["src/Demo2/Goal.Demo2.Infra.Crosscutting/Goal.Demo2.Infra.Crosscutting.csproj", "Goal.Demo2.Infra.Crosscutting.Dto/"]

RUN dotnet restore "src/Demo2/Goal.Demo2/Goal.Demo2.csproj"
COPY . .
WORKDIR "/src/Goal.Demo2"
RUN dotnet build "Goal.Demo2.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Goal.Demo2.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Goal.Demo2.dll"]
